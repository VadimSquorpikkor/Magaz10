<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout style="@style/horizontalLayoutStyle"
        android:layout_height="120dp">

    </LinearLayout>


    <LinearLayout style="@style/horizontalLayoutStyle">

        <TextView
            style="@style/textStyle"
            android:text="@string/moneySpent" />

        <TextView
            android:id="@+id/leftMoneySpent"
            style="@style/textStyle"
            android:text="@string/ZERO" />

    </LinearLayout>
    <LinearLayout style="@style/horizontalLayoutStyle">

        <TextView
            style="@style/textStyle"
            android:text="@string/moneyLeftForEach" />

        <TextView
            android:id="@+id/leftMoneyLeft"
            style="@style/textStyle"
            android:text="@string/ZERO" />

    </LinearLayout>

    <LinearLayout style="@style/horizontalLayoutStyle">

        <EditText
            android:id="@+id/leftPrice1"
            style="@style/WeightNumberStyle" />

        <EditText
            android:id="@+id/leftCount1"
            style="@style/shortNumberStyle" />

        <TextView
            android:id="@+id/leftTextTotal1"
            style="@style/editStyle" />
    </LinearLayout>
    <LinearLayout style="@style/horizontalLayoutStyle">

        <EditText
            android:id="@+id/leftPrice2"
            style="@style/WeightNumberStyle" />

        <EditText
            android:id="@+id/leftCount2"
            style="@style/shortNumberStyle" />

        <TextView
            android:id="@+id/leftTextTotal2"
            style="@style/editStyle" />
    </LinearLayout>
    <LinearLayout style="@style/horizontalLayoutStyle">

        <EditText
            android:id="@+id/leftPrice3"
            style="@style/WeightNumberStyle" />

        <EditText
            android:id="@+id/leftCount3"
            style="@style/shortNumberStyle" />

        <TextView
            android:id="@+id/leftTextTotal3"
            style="@style/editStyle" />
    </LinearLayout>
    <LinearLayout style="@style/horizontalLayoutStyle">

        <EditText
            android:id="@+id/leftPrice4"
            style="@style/WeightNumberStyle" />

        <EditText
            android:id="@+id/leftCount4"
            style="@style/shortNumberStyle" />

        <TextView
            android:id="@+id/leftTextTotal4"
            style="@style/editStyle" />
    </LinearLayout>
    <LinearLayout style="@style/horizontalLayoutStyle">

        <EditText
            android:id="@+id/leftPrice5"
            style="@style/WeightNumberStyle" />

        <EditText
            android:id="@+id/leftCount5"
            style="@style/shortNumberStyle" />

        <TextView
            android:id="@+id/leftTextTotal5"
            style="@style/editStyle" />
    </LinearLayout>
    <LinearLayout style="@style/horizontalLayoutStyle">

        <EditText
            android:id="@+id/leftPrice6"
            style="@style/WeightNumberStyle" />

        <EditText
            android:id="@+id/leftCount6"
            style="@style/shortNumberStyle" />

        <TextView
            android:id="@+id/leftTextTotal6"
            style="@style/editStyle" />
    </LinearLayout>
    <LinearLayout style="@style/horizontalLayoutStyle">

        <EditText
            android:id="@+id/leftPrice7"
            style="@style/WeightNumberStyle" />

        <EditText
            android:id="@+id/leftCount7"
            style="@style/shortNumberStyle" />

        <TextView
            android:id="@+id/leftTextTotal7"
            style="@style/editStyle" />
    </LinearLayout>

    <LinearLayout style="@style/horizontalLayoutStyle">

        <Button
            style="@style/buttonStyle"

            android:layout_height="30dp"
            android:text="@string/clearIt"
            android:id="@+id/leftEraseButton"
            android:layout_width="170dp" />

        <TextView
            android:id="@+id/clear"
            style="@style/editStyle"
            android:layout_width="250dp" />
    </LinearLayout>

    <LinearLayout style="@style/horizontalLayoutStyle"
        android:layout_height="120dp">

    </LinearLayout>

    <LinearLayout style="@style/horizontalLayoutStyle">
        <Button
            style="@style/buttonStyle"
            android:id="@+id/homeButton"
            android:text="@string/home" />

        <Button
            style="@style/buttonStyle"
            android:background="@android:color/holo_orange_dark"
            android:id="@+id/leftButton"
            android:text="@string/left" />
        <Button
            style="@style/buttonStyle"
            android:id="@+id/orderButton"
            android:text="@string/orders" />
        <Button
            style="@style/buttonStyle"
            android:id="@+id/countButton"
            android:text="@string/calculate" />
    </LinearLayout>


</LinearLayout>
