<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <!--<item name="android:gravity">right</item>-->
        <item name="android:padding">5dp</item>
        <!--<item name="android:inputType">numberDecimal</item>-->

    </style>

    <style name="WeightTextStyle" parent="editStyle">
        <item name="android:layout_width">130dp</item>
        <!--<item name="android:layout_weight">3</item>-->

    </style>

    <style name="WeightTextStyleSmall" parent="editStyle">
        <item name="android:layout_width">130dp</item>
        <item name="android:textSize">10sp</item>
        <!--<item name="android:layout_weight">3</item>-->

    </style>

    <style name="WeightNumberStyle" parent="editStyle">
        <item name="android:layout_width">130dp</item>
        <!--<item name="android:layout_weight">3</item>-->
        <item name="android:inputType">numberDecimal</item>

    </style>

    <style name="shortNumberStyle" parent="editStyle">
        <item name="android:layout_width">10dp</item>
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:inputType">number</item>

    </style>

    <style name="shortNumberStyleSmall" parent="editStyle">
        <item name="android:layout_width">10dp</item>
        <item name="android:textSize">10sp</item>
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:inputType">number</item>

    </style>

    <style name="shortDecimalStyle" parent="editStyle">
        <item name="android:layout_width">10dp</item>
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:inputType">numberDecimal</item>

    </style>

    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <!--<item name="android:gravity">left</item>-->
        <item name="android:padding">5dp</item>
    </style>

    <style name="horizontalLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
